@model IEnumerable<GarbageCollector.Models.PickupModels>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("PickupDay", "PickupModels", FormMethod.Post))
{

    <fieldset>

        Pickup Day

        @Html.DropDownList("PickupDate", new SelectList(Enum.GetValues(typeof(DayOfWeek))), "Select Pickup Day")

        <p>
            <input type="submit" value="Submit" />

        </p>

    </fieldset>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PickupDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PickupDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID}) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
